{
	"name": "theme-editor-live",
	"displayName": "Theme Editor Live",
	"description": "Visually edit and preview VS Code themes in real time with comprehensive theme management.",
	"version": "2.0.0",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/edasevar/theme-editor-live"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Themes",
		"Other"
	],
	"keywords": [
		"theme",
		"editor",
		"colors",
		"customization",
		"live preview"
	],
	"activationEvents": [
		"onCommand:themeEditor.open",
		"onCommand:themeEditor.loadTheme",
		"onCommand:themeEditor.exportTheme",
		"onCommand:themeEditor.resetTheme",
		"onLanguage:json",
		"onLanguage:jsonc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "themeEditor.open",
				"title": "Open Theme Editor Live",
				"category": "Theme Editor"
			},
			{
				"command": "themeEditor.loadTheme",
				"title": "Load Theme File",
				"category": "Theme Editor"
			},
			{
				"command": "themeEditor.exportTheme",
				"title": "Export Current Theme",
				"category": "Theme Editor"
			},
			{
				"command": "themeEditor.resetTheme",
				"title": "Reset Theme to Default",
				"category": "Theme Editor"
			},
			{
				"command": "themeEditor.cleanupSettings",
				"title": "Clean Up Theme Settings",
				"category": "Theme Editor"
			},
			{
				"command": "themeEditor.reloadTemplate",
				"title": "Reload Template from TEMPLATE.jsonc",
				"category": "Theme Editor"
			},
			{
				"command": "themeEditor.syncTemplate",
				"title": "Sync Template with UI",
				"category": "Theme Editor"
			},
			{
				"command": "themeEditor.templateStats",
				"title": "Show Template Statistics",
				"category": "Theme Editor"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "themeEditor.open"
				},
				{
					"command": "themeEditor.loadTheme"
				},
				{
					"command": "themeEditor.exportTheme"
				},
				{
					"command": "themeEditor.resetTheme"
				},
				{
					"command": "themeEditor.reloadTemplate"
				},
				{
					"command": "themeEditor.syncTemplate"
				},
				{
					"command": "themeEditor.templateStats"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.102.0",
		"@types/node": "24.1.0",
		"@types/mocha": "^10.0.10",
		"@vscode/test-electron": "^2.5.2",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"eslint": "^9.32.0",
		"mocha": "^11.7.1",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"jsonc-parser": "^3.3.1"
	}
}
